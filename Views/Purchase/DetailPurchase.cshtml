@model InventoryManagement.Models.Purchase

@{
    ViewBag.Title = "DetailPurchase";
}

<h2>DetailPurchase</h2>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Purchase Product")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseProduct)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseQuantity)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Update Purchase Record", "UpdatePurchase", "Purchase", new { id = Model.PurchaseId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Cancel", "DisplayPurchase", "Purchase", new { @class = "btn btn-danger" })
</p>
