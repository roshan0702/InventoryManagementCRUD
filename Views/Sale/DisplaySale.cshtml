@model IEnumerable<InventoryManagement.Models.Sale>

@{
    ViewBag.Title = "DisplaySale";
}

<h2>Display Sale</h2>

<p>
    @Html.ActionLink("New Sale", "SaleProduct", "Sale", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sale Product")
        </th>
        <th>
            @Html.DisplayName("Sale Product")
        </th>
        <th>
            @Html.DisplayName("Sale Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SaleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.ActionLink("Update Sale Record", "UpdateSale", "Sale", new { id = item.SaleId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "DetailSale", "Sale", new { id = item.SaleId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "DeleteSale", "Sale", new { id = item.SaleId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

